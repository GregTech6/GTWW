# Deny everything by default
*

# Allow directories (directories with no tracked files don't get committed regardless)
!**/

!/.gitignore
!/.gitattributes

# License files
!/LICENSE*
!/COPYING*

# Documentation files
!/README.md

# Build files
!/build.gradle
!/settings.gradle
!/gradlew
!/gradlew.bat
!/gradle/wrapper/gradle-wrapper.jar
!/gradle/wrapper/gradle-wrapper.properties
!/.tool-versions
!/.run/*.xml

# Meta Project Files
!/.meta/**/*

# Github files
!/.github/**/*

# Source
!/src/main/java/**/*.java
!/src/template/java/**/*.java

# License Files inside the Mod
!/src/main/resources/**/LICENSE*
!/src/main/resources/**/COPYING*
# Assets
!/src/main/resources/**/*.txt
!/src/main/resources/**/*.cfg
!/src/main/resources/**/*.ogg
!/src/main/resources/**/*.png
!/src/main/resources/**/*.json
!/src/main/resources/**/*.lang
!/src/main/resources/**/*.info
!/src/main/resources/**/*.mcmeta
